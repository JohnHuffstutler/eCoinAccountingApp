@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" class="navbar-right" asp-action="Logout" asp-controller="Account" method="post">
        <ul class="navbar-nav navbar-right">
            <li class="nav-item">
                <a asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link">
                    Hello @UserManager.GetUserName(User)!
                </a>
            </li>
            <li class="nav-item">
                <button type="submit" class="nav-link btn btn-link" style="padding: 0;">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Register" id="registerLink" class="nav-link">Register</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Login" id="loginLink" class="nav-link">Log in</a>
        </li>
    </ul>
}
