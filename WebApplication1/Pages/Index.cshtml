@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body style="text-align: center;">
	<!-- Welcome Heading -->
	<h1 style="text-align: center;">Welcome To Ecoin Accountant!</h1>

	<!-- Background Image (commented out to display dashboard)
	<img src="./accountantBackgroundPic.jpg" alt="accountantBackgroundPic" style="width: 100%; height: 100%; top: 0; left: 0; z-index: -1; object-fit: cover;" />-->


	<!-- Square Panels -->
	<div style="display: flex; justify-content: center; margin-top: 20px;">
		<div style="width: 200px; height: 200px; background-color: white; margin: 0 10px; border-radius: 10px;">
			<!-- Current Ratio Content -->
			<p style="color: black; text-align: center; padding-top: 90px;">Current Ratio: @Model.CurrentRatio</p>
		</div>

		<div style="width: 200px; height: 200px; background-color: white; margin: 0 10px; border-radius: 10px;">
			<!-- Debt Ratio Content -->
			<p style="color: black; text-align: center; padding-top: 90px;">Debt Ratio: @Model.DebtRatio</p>
		</div>
	</div>
</body>
