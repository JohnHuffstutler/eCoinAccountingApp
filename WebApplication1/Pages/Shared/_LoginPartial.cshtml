@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <!-- Right side: Login/Logout/Register Links -->
    <div class="col-3 d-flex justify-content-end align-items-start">
        <ul class="navbar-nav">
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="font-size: x-large;">
                        Hello @User.Identity?.Name!
                    </a>
                </li>
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link" style="font-size: x-large;">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register" style="font-size: x-large;">
                        Register
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" style="font-size: x-large;">
                        Login
                    </a>
                </li>
            }
        </ul>
    </div>
