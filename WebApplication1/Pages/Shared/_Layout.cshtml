<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eCoinAccountingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eCoinAccountingApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="/ecoin_logo.png" style="width: 50px; height: 50px;" />

                <a class="navbar-brand" asp-area="" asp-page="/Index">eCoinAccountingApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <span class="tt" data-bs-placement="bottom" title="View the landing page, financial ratios and dashboards.">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </span>
                        </li>
                        <li class="nav-item">
                            <span class="tt" data-bs-placement="bottom" title="View information about the app.">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Help">Help</a>
                            </span>
                            </li>
                        <li class="nav-item">
                            <span class="tt" data-bs-placement="bottom" title="View or modify users.">
                                <a class="nav-link text-dark" asp-area="" asp-page="/User/Index">User Management</a>
                            </span>
                            </li>
                        <li class="nav-item">
                            <span class="tt" data-bs-placement="bottom" title="Create or modify journal entries.">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Journal">Journal</a>
                            </span>
                            </li>
                        <li class="nav-item">
                            <span class="tt" data-bs-placement="bottom" title="View general ledger.">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Ledger">Ledger</a>
                            </span>
                            </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - eCoinAccountingApp - <a asp-area="" asp-page="/Help">Help</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        const tooltips = document.querySelectorAll('.tt')
        tooltips.forEach(t => {
            new bootstrap.Tooltip(t)})
    </script>
</body>
</html>