@page "{id:int}"
@model eCoinAccountingApp.Pages.Account.EditModel
@{
}

<h2>Edit Account</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}
@if (Model.successMessage.Length > 0)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.successMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
    <input type="hidden" asp-for="Account.Id" />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Account Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.AccountName" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Account Number</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.AccountNumber" readonly />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.AccountDescription" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Normal Side</label>
        <div class="col-sm-6">
            <select class="form-control" asp-for="Account.NormalSide">
                <option value="Debit">Debit</option>
                <option value="Credit">Credit</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.AccountCategory" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Subcategory</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.AccountSubcategory" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Initial Balance</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.InitialBalance" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Debit</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.Debit" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Credit</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.Credit" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Balance</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.Balance" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Order</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.Order" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Statement</label>
        <div class="col-sm-6">
            <select class="form-control" asp-for="Account.Statement">
                <option value="IS">Income Statement</option>
                <option value="BS">Balance Sheet</option>
                <option value="RE">Retained Earnings</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Comment</label>
        <div class="col-sm-6">
            <textarea class="form-control" asp-for="Account.Comment"></textarea>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Date Added</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Account.DateAdded" readonly />
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3">
            <button type="submit" class="btn btn-primary">Save Changes</button> &nbsp;
            <a href="/Accounts/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
