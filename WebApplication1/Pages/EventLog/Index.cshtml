@page
@model eCoinAccountingApp.Pages.EventLog.IndexModel

<h2>Event Log</h2>

@if (Model.EventLogs.Count == 0)
{
    <p>No events found.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Event Description</th>
                <th>User ID</th>
                <th>Event Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.EventLogs)
            {
                <tr>
                    <td>@log.Description</td>
                    <td>@log.UserId</td>
                    <td>@log.EventTime.ToString("MM/dd/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
