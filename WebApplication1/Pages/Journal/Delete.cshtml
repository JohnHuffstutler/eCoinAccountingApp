@page
@model eCoinAccountingApp.Pages.Journal.DeleteModel

@{
    ViewData["Title"] = "Delete Journal Entry";
}

<h1>Delete Journal Entry</h1>

<h3>Are you sure you want to delete this journal entry?</h3>

<div>
    <h4>Journal Entry Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date Added
        </dt>
        <dd class="col-sm-10">
            @Model.JournalEntry.DateAdded.ToString("MM/dd/yyyy")
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.JournalEntry.Description
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.JournalEntry.Status
        </dd>
    </dl>

    <h4>Transactions</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Account Name</th>
                <th>Debit</th>
                <th>Credit</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.JournalEntry.Transactions)
            {
                <tr>
                    <td>@transaction.Account.AccountName</td>
                    <td>@transaction.Debit?.ToString("C")</td>
                    <td>@transaction.Credit?.ToString("C")</td>
                    <td>@transaction.Description</td>
                </tr>
            }
        </tbody>
    </table>

    <form method="post">
        <input type="hidden" asp-for="JournalEntry.JournalEntryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Journal/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
