@page
@model eCoinAccountingApp.Pages.Journal.DeleteModel

@{
    ViewData["Title"] = "Delete Journal Entry";
}

<h1>Delete Journal Entry</h1>

<h3>Are you sure you want to delete this entry?</h3>
<div>
    <h4>Journal Entry Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date Added
        </dt>
        <dd class="col-sm-10">
            @Model.Journal.DateAdded
        </dd>
        <dt class="col-sm-2">
            Account Name
        </dt>
        <dd class="col-sm-10">
            @Model.Journal.Account?.AccountName ?? "N/A" <!-- Show Account name if available -->
        </dd>
        <dt class="col-sm-2">
            Debit
        </dt>
        <dd class="col-sm-10">
            @Model.Journal.Debit.ToString("C")
        </dd>
        <dt class="col-sm-2">
            Credit
        </dt>
        <dd class="col-sm-10">
            @Model.Journal.Credit.ToString("C")
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Journal.JournalNum" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Journal/Index">Back to List</a>
    </form>
</div>
