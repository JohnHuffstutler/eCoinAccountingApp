@page
@model eCoinAccountingApp.Pages.Journal.IndexModel
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Journal Entries";

    string sortColumn = Model.SortColumn;
    string sortOrder = Model.SortOrder == "asc" ? "desc" : "asc";
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = SignInManager.IsSignedIn(User) && currentUser.Role == "Admin";
    var isManager = SignInManager.IsSignedIn(User) && currentUser.Role == "Manager";
}

<h1>Journal Entries</h1>

<!-- Search and Add New Journal Entry -->
<form method="get">
    <div class="form-group mb-3">
        <label for="SearchQuery">Search Journal Entries:</label>
        <input type="text" id="SearchQuery" name="SearchQuery" class="form-control" placeholder="Search by journal number, description, status, or account name..." value="@Model.SearchQuery" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <a href="/Journal/Create" class="btn btn-primary">Add Journal Entry</a>
</form>

<br />

<!-- Journal Entries Table -->
<table class="table table-hover">
    <thead>
        <tr>
            <th><a href="?sortColumn=JournalEntryId&sortOrder=@sortOrder">Journal Entry ID</a></th>
            <th><a href="?sortColumn=DateAdded&sortOrder=@sortOrder">Date</a></th>
            <th><a href="?sortColumn=Description&sortOrder=@sortOrder">Description</a></th>
            <th><a href="?sortColumn=Status&sortOrder=@sortOrder">Status</a></th>
            <th>File</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.Journals)
        {
            <tr>
                <td>@entry.JournalEntryId</td>
                <td>@entry.DateAdded.ToString("MM/dd/yyyy")</td>
                <td>@entry.Description</td>
                <td>@entry.Status</td>
                <td>
                    @if (!string.IsNullOrEmpty(entry.DocumentPath))
                    {
                        <a href="@Url.Content("~/" + entry.DocumentPath)" target="_blank">View Uploaded Document</a>
                    }
                </td>
                <td>
                    <a href="/Journal/Edit?id=@entry.JournalEntryId" class="btn btn-primary">Edit</a>
                    @if (isAdmin || isManager)
                    {
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-journal-id="@entry.JournalEntryId">Delete</button>
                    }
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <strong>Transactions:</strong>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Account Name</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in entry.Transactions)
                            {
                                <tr>
                                    <td>@transaction.Account.AccountName</td>
                                    <td>@transaction.Debit?.ToString("C")</td>
                                    <td>@transaction.Credit?.ToString("C")</td>
                                    <td>@transaction.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this journal entry?
                    <input type="hidden" id="journalId" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var journalId = button.getAttribute('data-journal-id');
            var inputId = deleteModal.querySelector('#journalId');
            inputId.value = journalId;
        });
    </script>
}
