@page "/Journal/Index"
@model eCoinAccountingApp.Pages.Journal.IndexModel

@{
    ViewData["Title"] = "Journal Entries";
}

<h1>Journal Entries</h1>

<span class="tt" data-bs-placement="bottom" title="Add a new journal entry.">
    <a href="/Journal/Create" class="btn btn-primary">Add Journal Entry</a>
</span>

<br />
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Journal Number</th>
            <th>Date</th>
            <th>Account Name</th>
            <th>Description</th>
            <th>Debit</th>
            <th>Credit</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Journals)
        {
            <tr>
                <td>@item.JournalNum</td>
                <td>@item.DateAdded.ToString("MM/dd/yyyy")</td>
                <td>@item.Account.AccountName</td> <!-- Ensure Account is included in the query -->
                <td>@item.Description</td> <!-- Ensure Account is included in the query -->
                <td>@item.Debit.ToString("C")</td>
                <td>@item.Credit.ToString("C")</td>
                <td>
                    <span class="tt" data-bs-placement="bottom" title="Edit journal entry.">
                        <a href="/Journal/Edit?id=@item.JournalNum" class="btn btn-primary">Edit</a>
                    </span>
                </td>
                <td>
                    <span class="tt" data-bs-placement="bottom" title="Delete journal entry.">
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-journal-id="@item.JournalNum">Delete</button>
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this journal entry?
            </div>
            <div class="modal-footer">
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" id="journalId" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var journalId = button.getAttribute('data-journal-id');
            var inputId = deleteModal.querySelector('#journalId');
            inputId.value = journalId;
        });
    </script>
}
