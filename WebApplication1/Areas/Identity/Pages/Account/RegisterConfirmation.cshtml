@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>@ViewData["Title"]</title>
</head>

<body style="background-color: #dce4ec; font-family: Georgia, 'Times New Roman', Times, serif;">

    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="text-center" style="background-color: white; padding: 30px; border-radius: 15px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
            <h1>@ViewData["Title"]</h1>
            <p style="font-size: 1.2rem;">Thank you for registering for eCoin! Your request is currently under review.</p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
